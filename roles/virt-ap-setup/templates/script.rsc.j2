/interface wireless security-profiles set [ find default=yes ] authentication-types=wpa2-psk mode=dynamic-keys  wpa2-pre-shared-key="{{service_wifi_passwd}}"
if ([/interface wireless security-profiles find name="{{service_wifi_profile}}" ] ="") do={/interface wireless security-profiles add authentication-types=wpa2-psk mode=dynamic-keys name={{service_wifi_profile}} wpa2-pre-shared-key="{{service_wifi_passwd}}"}
if ([/interface wireless find where name="{{service_wifi_if}}" ] ="") do={/interface wireless add disabled=no master-interface=[/interface wireless get number=[/interface wireless find where interface-type!="virtual-AP"] name] name={{service_wifi_if}} security-profile={{service_wifi_profile}} ssid={{service_wifi_ssid}}}
if ([/interface bridge port find bridge=[/interface get number=[/interface find where type=bridge] name] interface={{service_wifi_if}}]="") do={/interface bridge port add bridge=[/interface get number=[/interface find where type=bridge] name] interface={{service_wifi_if}}}
if ([/interface wireless get number=[/interface wireless find where interface-type!="virtual-AP"] frequency]!="auto") do={/interface wireless set number=[/interface wireless find where interface-type!="virtual-AP"] frequency=auto }
if ([/interface wireless get number=[/interface wireless find where interface-type!="virtual-AP"] tx-power]!="14") do={/interface wireless set number=[/interface wireless find where interface-type!="virtual-AP"] tx-power=14 tx-power-mode="all-rates-fixed" }
if ([/interface wireless get number=[/interface wireless find where interface-type!="virtual-AP"] "tx-power-mode"]!="all-rates-fixed") do={/interface wireless set number=[/interface wireless find where interface-type!="virtual-AP"] tx-power=14 tx-power-mode="all-rates-fixed" }
